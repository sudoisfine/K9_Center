<p id="notice"><%= notice %></p>

<div class="views">
<h1>K9 Center Dogs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Checked in</th>
      <th>Info</th>
      <th>Breed</th>
      <th>Owner</th>
      <th>Vet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.dob %></td>
        <td><% if dog.checked_in ==true %>
            <%= fa_icon "paw" %>
          <% end %></td>
        <td><%= dog.info %></td>
        <td><%= dog.breed.try (:name) %></td>
        <td><%= dog.owner.name %></td>
        <td><%= dog.vet.doctor %></td>
        <td><%= link_to (fa_icon "eye"), dog %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_dog_path(dog) %></td>
        <td><%= link_to (fa_icon "trash-o"), dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Add a Dog', new_dog_path, class: 'btn btn-large btn-secondary')  %>
</div>
