<p id="notice"><%= notice %></p>

<div class="views">

<h1>K9 Center Owners</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Emergency name</th>
      <th>Emergency phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.emergency_name %></td>
        <td><%= owner.emergency_phone %></td>
        <td><%= link_to (fa_icon "eye"), owner %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_owner_path(owner) %></td>
        <td><%= link_to (fa_icon "trash-o"), owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Add an Owner', new_owner_path, class: 'btn btn-large btn-secondary')  %>

</div>
