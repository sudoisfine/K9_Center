<p id="notice"><%= notice %></p>

<h1>Vet Contacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Clinic</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= vet.doctor %></td>
        <td><%= vet.clinic %></td>
        <td><%= vet.phone %></td>
        <td><%= link_to (fa_icon "eye"), vet %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_vet_path(vet) %></td>
        <td><%= link_to (fa_icon "trash-o"), vet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Add a Vet', new_vet_path, class: 'btn btn-large btn-secondary')  %>
